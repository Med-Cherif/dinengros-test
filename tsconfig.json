{
  "compilerOptions": {
    "baseUrl": "src",
    "allowJs": true,
    // "alwaysStrict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "esnext",
    "paths": {
      "@component/*": [
        "components/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ],
      "@context/*": [
        "contexts/*"
      ],
      "@hook/*": [
        "hooks/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@reducer/*": [
        "reducers/*"
      ]
    },
    "resolveJsonModule": true
    // "incremental": true
    ,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next.config.js"
  ]
}
